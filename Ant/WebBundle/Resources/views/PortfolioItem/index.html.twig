{% extends 'AntWebBundle::layout.html.twig' %}
{% block content %}
    <ol class="breadcrumb"><li>Главная</li></ol>
    <h1>Портфолио</h1>
    <div class="row">
        {% for portfolio in pagination %}

            <div class="col-sm-4 col-md-3">
                <div class="thumbnail">
                    <a href="{{ path('portfolio_show', { 'id': portfolio.id }) }}" class="pull-left">
                        {{ render(controller('ApplicationSonataMediaBundle:Gallery:thumb', { 'id': entity.gallery|sonata_urlsafeid} )) }}
                    </a>
                    <div class="caption">
                        <h3 class="media-heading">{{ portfolio.title }}</h3>
                        <p class="text-muted">{{ portfolio.getCreated|date('d.m.y H:i') }}</p>

                        <a href="{{ path('portfolio_show', { 'id': portfolio.id }) }}">Подробнее</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}