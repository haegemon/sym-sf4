
{% extends 'AntWebBundle::layout.html.twig' %}

{% block metakeywords %}
    <meta name="keywords" content="{{ entity.metaKey }}">
    <meta name="description" content="{{ entity.metaDesc }}">
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/ant/css/slimbox.css') }}" type="text/css" media="all" filter="cssrewrite" />
{% endblock %}
{% block content %}
    <ol class="breadcrumb"><li>Главная</li><li><a href="{{ path('portfolio') }}">Портфолио</a></li></ol>

    <h1>{{ entity.title }}</h1>
    <div id="gallery">
        <div class="lead">{{ entity.description | raw ('html') }}</div>
        <div class="row">
            {{ render(controller('AntMediaBundle:Gallery:view',{ 'id': entity.gallery.id } )) }}
        </div>
    </div>

{% endblock %}
{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('bundles/ant/js/slimbox.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/ant/js/autoload.js') }}" type="text/javascript"></script>

{% endblock %}