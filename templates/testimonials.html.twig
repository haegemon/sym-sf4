    <div class="container space-2 position-relative z-index-2">
        <div class="row">
            <div class="col-lg-4 mb-7 mb-lg-0">
                <div class="pr-lg-4">
                    <!-- SVG Quote -->
                    <figure class="mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="80px" height="80px"
